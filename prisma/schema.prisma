generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Customer {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  Position   Position? @relation(fields: [positionId], references: [id])
  username   String
  password   String
  firstname  String
  lastname   String
  img        String
  facebook   String
  line       String
  intragarm  String
  address    String
  city       String
  postalCode String
  status     String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  deletedAt  DateTime? @map("deleted_at")
  positionId String?   @db.ObjectId
}

model Position {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  team      String
  position  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  deletedAt DateTime?  @map("deleted_at")
  customer  Customer[]
}
